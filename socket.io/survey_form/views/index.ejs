<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Survey Form</title>
        <link rel="stylesheet" href="/style.css">
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
        <script type ="text/javascript">
             $(document).ready(function (){
                // this triggers the connection event in our server!
                var socket = io.connect();
                $('#form').submit(function (e){
                   e.preventDefault();
                   socket.emit("post_form", {
                       name: $('#name').val(),
                       location: $('#location').val(),
                       language: $('#lang').val(),
                       comment: $('#comment').val()
                   })
                       //display the emit response of the server called "updated_message" and "random_number"
           			socket.on('update_message', function (data){
           			    $('#message').html("You emitted the following information to the server: " + JSON.stringify(data.response));
           			});
           			socket.on('random_number', function (data){
           			   $('#number').html("Your lucky number emitted by the server is : " + JSON.stringify(data.response));
           			});
                });
            });
        </script>

    </head>
    <body>
        <div id="message"></div>
        <div id="number"></div>
        <div id="survey">
            <p>Survey</p>
            <form id="form" method="post">
                Your Name: <input type="text" name="name" placeholder="Your name..." id="name"><br>
                Dojo Location: <select class="" name="location" id="location">
                    <option>Mountain View</option>
                    <option>San Francisco</option>
                    <option>Chicago</option>
                    <option>Washington, DC</option>
                </select><br>
                Favourite Language: <select class="" name="lang" id="lang">
                    <option>C++</option>
                    <option>Ruby on Rails</option>
                    <option>Javascript</option>
                    <option>Java</option>
                    <option>Python</option>
                </select><br>
                Comment(optional):<br>
                <textarea name="comment" rows="5" cols="45" placeholder="Your comment here..." id="comment"></textarea><br>
                <input type="submit" name="submit" value="Submit" class="submit">
            </form>
        </div>
    </body>
</html>
